{{#instance}}
  <div class="row-fluid">
    <div class="span12">
      <a class="main-title {{class.category}} oneline" href="{{viewLink}}">
        {{title}}
      </a>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span9">
      <h6>Description</h6>
      <div class="rtf">
        {{{firstnonempty description '<span class="empty-message">None</span>'}}}
      </div>
    </div>
    <div class="span3">
      <h6>Status</h6>
      <p>
        {{status}}
      </p>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span9">
      <h6>People</h6>
      <lhn-popup-people {instance}="{instance}"></lhn-popup-people>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3">
      <h6>Due date</h6>
      <p>
        {{#if instance.start_date}}
          {{localize_date instance.start_date}}
        {{else}}
          Not set
        {{/if}}
      </p>
    </div>
    <div class="span6">
      <h6>Last deprecated date</h6>
      <p>
        {{#if instance.end_date}}
          {{localize_date instance.end_date}}
        {{else}}
          Not set
        {{/if}}
      </p>
    </div>
  </div>

  <div class="links">
    <div class="row-fluid">
      <div class="span12">
        <a class="secondary oneline {{instance.class.category}}" href="{{instance.program.viewLink}}#audit/audit/{{id}}">
          View {{instance.title}}
        </a>
      </div>
    </div>
  </div>
{{/instance}}
