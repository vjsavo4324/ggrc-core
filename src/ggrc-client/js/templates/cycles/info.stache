<section class="info{{#is_info_pin}} sticky-info-panel{{/is_info_pin}}">
  <div class="tier-content">
    {{#instance}}
      <div class="pane-header" >
        <div class="pane-header__container">
          <div class="pane-header__title" data-test-id="title_0ad9fbaf">
            {{#is_info_pin}}
              <h6>{{modifyFieldTitle instance.type 'Title'}}</h6>
            {{/is_info_pin}}
            <div class="pane-header__title-details">
              <h3 class="pane-header__title-name">{{title}}</h3>
              {{#if status}}
                <span class="pane-header__title-item">
                  <span class="state-value {{addclass 'state' status}}">{{un_camel_case status}}</span>
                </span>
              {{/if}}
            </div>
          </div>

          <div class="pane-header__toolbar">
            {{#is_info_pin}}
              <info-pin-buttons {maximized}="{maximized}" 
                                {on-change-maximized-state}="{@onChangeMaximizedState}" 
                                {on-close}="{@onClose}">
              </info-pin-buttons>
            {{/is_info_pin}}

            <div class="info-pane-utility">
              <!-- This should have only view link, shouldn't edit cycle instance of workflow while active -->
              <three-dots-menu>
                <li>
                  <a href="/workflows/{{instance.workflow.id}}">
                    <i class="fa fa-long-arrow-right"></i>
                    Open Workflow
                  </a>
                </li>
                <li>
                  <permalink {instance}="{instance}"/>
                </li>
              </three-dots-menu>
            </div>
          </div>
        </div>
      </div>
    {{/instance}}

    <div class="pane-content">

      <div class="row-fluid wrap-row">
        <div class="span12">
          <h6>Description</h6>
          <div class="rtf-block">
            <read-more {text}="{instance.description}"
                       {handle-markdown}="{instance.class.isChangeableExternally}">
            </read-more>
          </div>
        </div>
      </div>

      <object-loader {path}="instance.workflow">
        {{#if loadedObject}}
          <custom-roles {instance}="{loadedObject}"
                        {read-only}="{true}">
          </custom-roles>
          <div class="row-fluid wrap-row">
            <div class="span6">
              <ggrc-gdrive-folder-picker 
                {instance}="{loadedObject}"
                {placeholder}="'If selected, all workflow attachments go here.''"
                {{^is_allowed 'update' loadedObject}}{readonly}="{true}"{{/is_allowed}}>
              </ggrc-gdrive-folder-picker>
            </div>
            <div class="span6">
              <h6>Repeat Cycle</h6>
              <repeat-on-summary {unit}="{loadedObject.unit}" 
                                 {repeat-every}="{loadedObject.repeat_every}"
                                 {hide-repeat-off}="{false}">
              </repeat-on-summary>
            </div>
          </div>
        {{/if}}
      </object-loader>
    </div>
  
  </div>
</section>
