<simple-modal {modal-title}="{title}"
              {state}="{modalState}"
              {replace-content}="{true}"
              {extra-css-class}="'people-group-modal'"
              (hide)="{cancel()}">
  <div class="simple-modal__header flex-box flex-row">
    <div class="simple-modal__header-text flex-size-1">
      <div class="simple-modal__title">
        <div class="simple-modal__title__name">
          {{title}}
        </div>
      </div>
    </div>
    <button type="button" class="btn btn-small btn-icon" ($click)="cancel()">
      <i class="fa fa-times black"></i>
    </button>
  </div>

  <div class="simple-modal__body {{#if isLoading}}loading{{/if}}">
    <div class="simple-modal__section simple-modal__sub-header-section">
      <p>
        Add person
      </p>
      {{#if isLoading}}
        <spinner {toggle}="{isLoading}"></spinner>
      {{else}}
        {{#if_config_exist 'external_services.Person'}}
          <external-data-autocomplete {type}="'Person'"
                                      {placeholder}="'Type person'"
                                      {min-length}="2"
                                      (item-selected)="{personSelected(%event.selectedItem)}">
          </external-data-autocomplete>
        {{else}}
          <autocomplete {search-items-type}="'Person'"
                        (item-selected)="{personSelected(%event.selectedItem)}"
                        {placeholder}="'Type person'">
          </autocomplete>
        {{/if_config_exist}}
      {{/if}}
    </div>
    <div class="simple-modal__section people-group-modal__people-section">
      <div>
        <object-list {(items)}="{people}"
                     {is-disabled}="{isLoading}"
                     {empty-message}="{emptyListMessage}">
            <person-data {person}="{.}">
              {{#unmapablePerson}}
                <a href="javascript://"
                  class="people-group-modal__unmap {{#if isDisabled}}disabled{{/if}}"
                  ($click)="unmap(person)">
                    <i class="fa fa-close"></i>
                </a>
              {{/unmapablePerson}}
            </person-data>
        </object-list>
      </div>
    </div>
  </div>

  <div class="simple-modal__footer">
    <div class="simple-modal__toolbar people-group-modal__footer">
      <button type="button"
              class="btn btn-green people-group-modal__button"
              ($click)="save()"
        {{#if isLoading}}disabled{{/if}}>
        Save &amp; Close
      </button>
      <button type="button"
              class="btn btn-small people-group-modal__button btn-white"
              ($click)="cancel()"
        {{#if isLoading}}disabled{{/if}}>
        Cancel
      </button>
      <div class="people-group-modal__selected-count">
        {{selectedCount}}
      </div>
    </div>
  </div>
</simple-modal>
